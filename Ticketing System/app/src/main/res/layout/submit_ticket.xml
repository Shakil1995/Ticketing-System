<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6BBBB"
android:layout_margin="7dp"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="7dp">

            <TextView
                android:id="@+id/textViewNameID"
                android:gravity="left|bottom"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="7dp"
                android:text="Name"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="15dp"
                />

            <EditText
                android:id="@+id/Enter_name_ID"
                android:hint="Enter your name"
                android:gravity="left|center"
                android:layout_marginLeft="10dp"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:layout_margin="7dp"/>


            <TextView
                android:id="@+id/textViewMailID"
                android:gravity="left|bottom"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="7dp"
                android:text="Mail"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="15dp"
                />

            <EditText
                android:id="@+id/Enter_mail_ID"
                android:hint="Enter your mail"
                android:layout_marginLeft="10dp"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:layout_margin="7dp"/>


            <TextView
                android:id="@+id/textViewSubjectID"
                android:gravity="left|center"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="7dp"
                android:text="Subject"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="15dp"
                />

            <EditText
                android:id="@+id/Enter_Subject_ID"
                android:hint="Enter your Subjet"
                android:gravity="left|center"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:textColor="#000"
                android:textSize="15dp"
                android:layout_margin="7dp"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="#C4B5B5"
                android:layout_marginLeft="7dp">

                <Spinner
                    android:id="@+id/spinarID"
                    android:layout_margin="7dp"
                    android:layout_width="150dp"
                    android:layout_height="40dp"

                    >


                </Spinner>

            </LinearLayout>

            <TextView
                android:id="@+id/textViewDescriptionID"
                android:gravity="left|center"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="7dp"
                android:text="Description"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="15dp"
                />

            <EditText
                android:id="@+id/Enter_description_ID"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="7dp"
                android:layout_marginLeft="10dp"
                android:background="#fff"
                android:gravity="left"
                android:textColor="#000"
                android:textSize="15dp"
                />


            <TextView
                android:id="@+id/textViewAttachFileID"
                android:gravity="left|center"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="7dp"
                android:text="Attach File"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="15dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_marginLeft="7dp"
                android:layout_marginBottom="15dp">

                <TextView
                    android:id="@+id/textViewSelectfileID"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"

                    android:layout_gravity="left|center"
                    android:background="#fff"
                    android:gravity="center"
                    android:text="Select File"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ImageView_AttachfileID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/attach_file_black_24dp"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="10dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="7dp"
                android:layout_marginBottom="20dp">
                <Button
                    android:id="@+id/Submit_dataID"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="Submit"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="25dp"
                    android:background="#4BA7EC"
                    android:layout_marginBottom="25dp"/>
                <Button
                    android:id="@+id/cancel_ID"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="Cancel"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:background="#F7EFEF"
                    android:layout_marginBottom="25dp"/>


            </LinearLayout>
        </LinearLayout>




    </ScrollView>


</RelativeLayout>